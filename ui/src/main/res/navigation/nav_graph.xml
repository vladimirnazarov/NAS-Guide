<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="by.ssrlab.ui.fragments.MainFragment"
        android:label="MainFragment">

        <action
            android:id="@+id/action_mainFragment_to_historyFragment"
            app:destination="@id/historyFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

        <action
            android:id="@+id/action_mainFragment_to_orgFragment"
            app:destination="@id/orgFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

        <action
            android:id="@+id/action_mainFragment_to_inventionsFragment"
            app:destination="@id/inventionsFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="by.ssrlab.ui.fragments.history.HistoryFragment"
        android:label="HistoryFragment">

        <action
            android:id="@+id/action_historyFragment_to_datesFragment"
            app:destination="@id/datesFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

        <action
            android:id="@+id/action_historyFragment_to_personsFragment"
            app:destination="@id/personsFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

        <action
            android:id="@+id/action_historyFragment_to_placesFragment"
            app:destination="@id/placesFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

    </fragment>

    <fragment
        android:id="@+id/inventionsFragment"
        android:name="by.ssrlab.ui.fragments.inventions.DevelopmentsFragment"
        android:label="InventionsFragment">

        <action
            android:id="@+id/action_inventionsFragment_to_filterFragment"
            app:destination="@id/filterFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

    </fragment>

    <fragment
        android:id="@+id/orgFragment"
        android:name="by.ssrlab.ui.fragments.organizations.OrgsFragment"
        android:label="OrgFragment">

        <action
            android:id="@+id/action_orgFragment_to_filterFragment"
            app:destination="@id/filterFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

        <action
            android:id="@+id/action_orgFragment_to_mapFragment"
            app:destination="@id/mapFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="by.ssrlab.common_ui.common.fragments.utils.SearchFragment"
        android:label="SearchFragment"/>

    <fragment
        android:id="@+id/datesFragment"
        android:name="by.ssrlab.ui.fragments.history.DatesFragment"
        android:label="DatesFragment"/>

    <fragment
        android:id="@+id/personsFragment"
        android:name="by.ssrlab.ui.fragments.history.PersonsFragment"
        android:label="PersonsFragment">

        <action
            android:id="@+id/action_personsFragment_to_searchFragment"
            app:destination="@id/searchFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

    </fragment>

    <fragment
        android:id="@+id/placesFragment"
        android:name="by.ssrlab.ui.fragments.history.PlacesFragment"
        android:label="PlacesFragment">

        <action
            android:id="@+id/action_placesFragment_to_mapFragment"
            app:destination="@id/mapFragment"

            app:enterAnim="@anim/nav_en"
            app:exitAnim="@anim/nav_ex"
            app:popEnterAnim="@anim/nav_pen"
            app:popExitAnim="@anim/nav_pex"/>

    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="by.ssrlab.common_ui.common.fragments.MapFragment"
        android:label="MapFragment"/>

    <fragment
        android:id="@+id/filterFragment"
        android:name="by.ssrlab.common_ui.common.fragments.utils.FilterFragment"
        android:label="FilterFragment"/>

</navigation>